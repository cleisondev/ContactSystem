@model List<ContactModel>


@{
    ViewData["Title"] = "Listagem de contatos";
}



<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-outline-success" role="button" asp-controller="Contact" asp-action="Create">Adicionar novo contato</a> @*AspController - Qual controller ir; AspAction - Qual ação do controller *@
    </div>
    <br />

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class=" btn btn-success btn-sm close-alert " aria-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>

    }


    @if (TempData["MensagemErro"] != null)
    {
     <div class="alert alert-danger" role="alert">
        <button type="button" class=" btn btn-danger btn-sm close-alert " aria-label="Close">X</button>
        @TempData["MensagemErro"]
     </div>

    }

<br />

    <h1 class="display-4"><em>Listagem de Contatos</em></h1>

    <table class="table">

        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">E-mail</th>
                <th scope="col">Celular</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (ContactModel contato in Model)
                {
                    <tr>
                        <th scope="row">@contato.Id</th>
                        <td>@contato.Name</td>
                        <td>@contato.Email</td>
                        <td>@contato.Cell</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-outline-dark" asp-route-id="@contato.Id" asp-controller="Contact" asp-action="Edit">Editar</a>
                                <a role="button" class="btn btn-outline-danger " asp-route-id="@contato.Id" asp-controller="Contact" asp-action="Delete">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

