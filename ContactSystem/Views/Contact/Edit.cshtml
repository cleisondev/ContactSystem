@model ContactModel

@{
    ViewData["Title"] = "Editar contato";
}


<div class="text-center">
    <h1 class="display-4"><em>@ViewData["Title"]</em></h1>
</div>

<form asp-controller="Contact" asp-action="Alterar" method="post">
    <input type="hidden" asp-for="Id"/>
    <div class="form-group">
        <label for="nome"><em>Nome</em></label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato...">
        <span asp-validation-for="Name" class="text-danger font-italic"></span>
    </div>
    <div class="form-group">
        <label for="email"><em>E-mail</em></label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do contato...">
        <span asp-validation-for="Email" class="text-danger font-italic"></span>
    </div>
    <div class="form-group">
        <label for="celular"><em>Celular</em></label>
        <input type="text" asp-for="Cell" class="form-control" placeholder="Digite o celular do contato...">
        <span asp-validation-for="Cell" class="text-danger font-italic"></span>
    </div>

    <button type="submit" class="btn btn-outline-success">Alterar</button>
    <a class="btn btn-outline-primary" asp-controller="Contact" asp-action="Index">Voltar</a>
</form>