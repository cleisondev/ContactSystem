@model ContactModel

@{
    ViewData["Title"] = "Apagar contato";
}

<div class="text-center">
    <h4 class="font-weight-light"><em>Deseja realmente apagar o contato (@Model.Name)?</em></h4>
</div>

<a class="btn btn-outline-success btn-block" role="button" asp-controller="Contact" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar</a>
<a class="btn btn-outline-danger btn-block" role="button" asp-controller="Contact" asp-action="Index">Cancelar</a>